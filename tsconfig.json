{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "baseUrl": "./",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@assets/*": [
                "src/assets/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@abi/*": [
                "src/abi/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@contracts/*": [
                "src/contracts/*"
            ],
            "@locales/*": [
                "src/locales/*"
            ],
            "@redux/*": [
                "src/redux/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@graphql/*": [
                "src/graphql/*"
            ],
            "@shared/*": [
                "src/components/shared/*"
            ],
            "@layouts/*": [
                "src/components/layouts/*"
            ]
        }
    },
    "include": [
        "src",
        "./main.tsx"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
